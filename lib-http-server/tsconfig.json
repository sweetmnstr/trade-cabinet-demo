{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ESNext", "ES2019"],
        "declaration": true,
        "outDir": "build",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "removeComments": false
    },
    "include": ["lib/**/*", "tests/**/*"],
    "exclude": ["**/*.spec.ts"]
}
