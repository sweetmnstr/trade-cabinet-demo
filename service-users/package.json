{
    "name": "trade-cabinet-service-users",
    "version": "0.0.1",
    "description": "",
    "main": "./build",
    "author": "Jack",
    "license": "MIT",
    "scripts": {
        "doc": "compodoc -p tsconfig.build.json -s",
        "start": "cross-var pm2 start ./build --name $npm_package_name",
        "stop": "cross-var pm2 stop $npm_package_name",
        "restart": "cross-var pm2 restart $npm_package_name",
        "log": "cross-var pm2 log $npm_package_name",
        "relog": "npm run restart && npm run log",
        "build": "tsc -p ./tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "format-output": "prettier --write \"output/**/*.ts\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "typeorm": "node ts ./node_modules/typeorm/cli.js",
        "migrate:gen": "npm run typeorm -- migration:generate -n",
        "migrate:run": "npm run typeorm -- migration:run",
        "migrate:down": "npm run typeorm -- migration:revert",
        "typeorm:build": "node ./node_modules/typeorm/cli.js",
        "migrate:build:run": "npm run typeorm:build migration:run",
        "migrate:build-run": "npm run build && npm run migrate:build:run"
    },
    "devDependencies": {
        "@nestjs/testing": "^7.5.5",
        "@types/jest": "^26.0.17",
        "@types/mysql": "^2.15.16",
        "@types/node": "^14.14.10",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.9.1",
        "@typescript-eslint/parser": "^4.9.1",
        "eslint": "^7.15.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.2.0",
        "jest": "^26.6.3",
        "lib-http-server": "file:../lib-http-server",
        "prettier": "^2.2.1",
        "trade-cabinet-types": "file:../types",
        "ts-jest": "^26.4.4",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.2"
    },
    "dependencies": {
        "@nestjs/common": "^7.6.15",
        "@nestjs/core": "^7.5.5",
        "@nestjs/microservices": "^7.6.15",
        "@nestjs/schedule": "^0.4.1",
        "@nestjs/typeorm": "^7.1.5",
        "bitcoin-cli": "^0.0.3",
        "bitcoinjs-lib": "^5.2.0",
        "cross-var": "^1.1.0",
        "dotenv": "^8.2.0",
        "lib-clients": "file:../lib-clients",
        "lib-rpc": "file:../lib-rpc",
        "moment-timezone": "^0.5.32",
        "mysql2": "^2.2.5",
        "reflect-metadata": "^0.1.13",
        "regtest-client": "^0.2.0",
        "rxjs": "^6.6.3",
        "source-map-support": "^0.5.19",
        "typeorm": "^0.2.31",
        "uuid": "^8.3.1",
        "winston": "^3.3.3",
        "winston-daily-rotate-file": "^4.5.0"
    }
}
